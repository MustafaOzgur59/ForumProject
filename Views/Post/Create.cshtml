@model ForumProject.Models.Post.CreatePostModel;

<h2>New post for  @Model.ForumName forum</h2>

<form asp-action="Create" asp-controller="Post">
    <input asp-for="@Model.ForumId" type="hidden">
    <div class="form-group my-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control"></input>
    </div>
    <div class="form-group my-3">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-submitPost btn-primary my-1">Submit</button>
</form>